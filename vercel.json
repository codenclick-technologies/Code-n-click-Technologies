{
    "version": 2,
    "name": "codenclick-technologies",
    "redirects": [
        {
            "source": "/case-studies",
            "destination": "/portfolio",
            "permanent": true
        },
        {
            "source": "/tools",
            "destination": "/services",
            "permanent": true
        },
        {
            "source": "/brochure",
            "destination": "/company-brochure",
            "permanent": true
        },
        {
            "source": "/(.*)",
            "has": [
                {
                    "type": "host",
                    "value": "codenclick.in"
                }
            ],
            "destination": "https://www.codenclick.in/$1",
            "permanent": true
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://server-sepia-alpha.vercel.app/api/:path*"
        },
        {
            "source": "/sitemap.xml",
            "destination": "https://server-sepia-alpha.vercel.app/api/sitemap.xml"
        },
        {
            "source": "/robots.txt",
            "destination": "https://server-sepia-alpha.vercel.app/api/robots.txt"
        },
        {
            "source": "/ads.txt",
            "destination": "/ads.txt"
        },
        {
            "source": "/((?!api|sitemap.xml|robots.txt|ads.txt|_next|static|favicon.ico|faviconimage.png|logo.png|brand-full.png|brand-c.png|manifest.json|assets).*(\\.html|\\.js|\\.css|\\.png|\\.jpg|\\.jpeg|\\.svg|\\.gif|\\.json|\\.xml|\\.txt)$)",
            "destination": "/$1"
        },
        {
            "source": "/(.*)",
            "has": [
                {
                    "type": "header",
                    "key": "User-Agent",
                    "value": ".*(Googlebot|bingbot|Baiduspider|YandexBot|Sogou).*"
                }
            ],
            "destination": "https://server-sepia-alpha.vercel.app/api/snapshot?path=/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}